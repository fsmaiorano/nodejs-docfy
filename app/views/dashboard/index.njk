{% extends "layouts/default.njk" %}

{% block body %}

 <div class="wrapper">
    <header id="header">
      <div class="container">
        <h1>Docfy</h1>
        <div class="user-info">
          <p class="welcome">
            Bem vindo<br>
            <strong>{{ user.name }}</strong>
          </p>
          <a href="signin.html" class="btn btn-danger">
            <img src="/img/signout.svg">
          </a>
        </div>
      </div>
    </header>

    <section id="main">
      <div class="container">
        <header>
          <h2>Meus projetos ({{projects.length}})</h2>
          <div class="addon">
            <form action="/project" method="post">
              <input type="text" name="title" placeholder="Novo projeto">
              <button type="submit" class="btn">
                <img src="/img/plus.svg">
              </button>
            </form>
          </div>
        </header>

        <section id="content">
          <div class="project-list">
            {% for project in projects %}
              <a href="">
                <strong>{{project.title}}</strong>
              </a>
            {% endfor %}
          </div>
        </section>
      </div>
    </section>
  </div>

{% endblock %}
